<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="服务器相关"
        app:iconSpaceReserved="false">
        <EditTextPreference
            app:key="ip"
            app:title="地址:端口"
            app:defaultValue="192.168.10.208"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>
        <EditTextPreference
            app:key="user"
            app:title="用户名"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>
        <EditTextPreference
            app:key="password"
            app:title="密码"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        app:title="偏好设置"
        app:iconSpaceReserved="false">
    <CheckBoxPreference
        app:defaultValue="false"
        app:key="show_watched"
        app:title="显示看过的剧集"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false"/>
    </PreferenceCategory>
</PreferenceScreen>